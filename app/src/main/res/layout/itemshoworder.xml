<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
    android:layout_marginBottom="1dp"
        android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:layout_marginLeft="@dimen/paddinng_large_15"
    android:layout_marginRight="@dimen/paddinng_large_15"
    android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white">
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D8D6D7"
        android:layout_marginTop="10dp"
       />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_too_large_30"
        app:cardCornerRadius="5dp"
        android:focusable="true"
        card_view:cardBackgroundColor="@color/brown"
       android:elevation="@dimen/padding_medium_10dp"
        card_view:cardElevation="@dimen/padding_medium_10dp"
      >

    <TextView
        android:id="@+id/index"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Orders"
      android:layout_gravity="center"
     android:gravity="center"
        android:textSize="12sp"
        android:fontFamily="@font/semibold"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
